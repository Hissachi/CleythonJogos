{
  "compilerOptions": {
    "types": ["jquery"],
    "target": "ES6",
    "lib": ["ES2017", "DOM"],
    "module": "ESNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "./dist/js",
    "rootDir": "./src/ts",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@types/*": ["src/ts/types/*"]
    },
    "typeRoots": [
      "./src/ts/types",
      "./node_modules/@types",
      "./types"
    ],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}