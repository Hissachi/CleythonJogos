{
  "compilerOptions": {
    "types": ["jquery"],
    "target": "ES2017",
    "lib": ["ES2017", "DOM"],
    "module": "ESNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}